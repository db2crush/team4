<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/textView_list_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1.6"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textSize="50px"/>


        <TextView
            android:id="@+id/textView_list_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="2.2"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textSize="50px"/>


        <TextView
            android:id="@+id/textView_list_depart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="2.4"
            android:layout_margin="5dp"
            android:textSize="50px"
            />




        <TextView
            android:id="@+id/textView_list_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1.1"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="400px"
            android:textSize="50px"

            android:padding="5dp" />

        <TextView
            android:id="@+id/textView_list_day"
            android:layout_marginLeft="10px"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="3.4"
            android:textSize="50px"


        <TextView
            android:id="@+id/textView_list_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="2.2"
            android:textSize="50px"


    </LinearLayout>


</LinearLayout>